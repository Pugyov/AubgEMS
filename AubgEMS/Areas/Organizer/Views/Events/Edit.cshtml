@model AubgEMS.Core.Models.Events.EventEditDto
@{
    ViewData["Title"] = "Edit Event";
}

<h1>Edit Event</h1>
<hr />

<form asp-area="Organizer" asp-controller="Events" asp-action="Edit" method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Start Time (UTC)</label>
        <input asp-for="StartTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Event Type</label>
        <select asp-for="EventTypeId" class="form-select" asp-items="ViewBag.EventTypes"></select>
        <span asp-validation-for="EventTypeId" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Club</label>
        <select asp-for="ClubId" class="form-select" asp-items="ViewBag.Clubs"></select>
        <span asp-validation-for="ClubId" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Location</label>
        <select asp-for="LocationId" class="form-select" asp-items="ViewBag.Locations">
            <option value="">(none)</option>
        </select>
    </div>

    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Save</button>
        <a asp-area="Organizer" asp-controller="Events" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
