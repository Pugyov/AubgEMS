@model AubgEMS.Core.Models.Admin.DashboardKpisDto
@{
    ViewData["Title"] = "Admin Dashboard";

    var fromDt = ViewBag.From != null ? (DateTime)ViewBag.From : DateTime.UtcNow.AddDays(-30);
    var toDt   = ViewBag.To   != null ? (DateTime)ViewBag.To   : DateTime.UtcNow;

    var from = fromDt.ToString("yyyy-MM-dd");
    var to   = toDt.ToString("yyyy-MM-dd");
}

<h1 class="mb-4">Admin Dashboard</h1>

<div class="row g-3">
    <!-- Main column -->
    <div class="col-lg-8">
        <!-- Filters -->
        <div class="card shadow-sm mb-3">
            <div class="card-header">Filters</div>
            <div class="card-body">
                <form method="get" class="row g-2 align-items-end">
                    <div class="col-12 col-md-4">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" name="from" value="@from" />
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" name="to" value="@to" />
                    </div>
                    <div class="col-12 col-md-4">
                        <button class="btn btn-primary">Apply</button>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="btn btn-outline-secondary ms-2">Reset</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- KPI cards -->
        <div class="row g-3">
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small">Total Events (in range)</div>
                        <div class="display-6">@Model.TotalEvents</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small">Total Sign-ups (Joins)</div>
                        <div class="display-6">@Model.TotalJoins</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small">Avg. Fill Rate</div>
                        <div class="display-6">@String.Format("{0:P1}", Model.AvgFillRate)</div>  @* one decimal *@
                        <div class="text-muted small mt-1">Avg of min(joins, capacity)/capacity</div>
                    </div>
                </div>
            </div>
            
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small">Upcoming Week Load</div>
                        <div class="display-6">@Model.UpcomingWeekLoad</div>
                        <div class="text-muted small mt-1">Event(s) in the next 7 days</div>
                    </div>
                </div>
            </div>
            
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small">Unique Attendees</div>
                        <div class="display-6">@Model.UniqueAttendees</div>
                        <div class="text-muted small mt-1">Distinct users in range</div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>

    <!-- Sidebar: Quick actions -->
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">Quick actions</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Refresh</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="News" asp-action="Index">Manage News</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="Clubs" asp-action="Index">Manage Clubs</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Organizer" asp-controller="Events" asp-action="Index" asp-route-all="true">Manage Events</a>
            </div>
        </div>
    </div>
</div>
