@model AubgEMS.Core.Models.Admin.DashboardKpisDto
@{
    ViewData["Title"] = "Admin Dashboard";

    var fromDt = ViewBag.From != null ? (DateTime)ViewBag.From : DateTime.UtcNow.AddDays(-30);
    var toDt   = ViewBag.To   != null ? (DateTime)ViewBag.To   : DateTime.UtcNow;

    var from = fromDt.ToString("yyyy-MM-dd");
    var to   = toDt.ToString("yyyy-MM-dd");

    // Quick range presets (computed here so the controller can stay unchanged)
    var today    = DateTime.UtcNow.Date;
    var todayStr = today.ToString("yyyy-MM-dd");
    var p7From   = today.AddDays(-6).ToString("yyyy-MM-dd");   // last 7 days incl. today
    var p30From  = today.AddDays(-29).ToString("yyyy-MM-dd");  // last 30 days incl. today
    var p90From  = today.AddDays(-89).ToString("yyyy-MM-dd");  // last 90 days incl. today
}

<!-- Header -->
<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item">
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
</nav>

<div class="mb-3">
    <h1 class="page-title">Admin Dashboard</h1>
    <p class="page-subtitle">KPIs and quick actions for the selected date range.</p>
</div>

<div class="row g-3">
    <!-- Main column -->
    <div class="col-lg-8">
        <!-- Filters -->
        <div class="card shadow-sm mb-3">
            <div class="card-header d-flex align-items-center justify-content-between">
                <span>Filters</span>
                <div class="btn-group btn-group-sm" role="group" aria-label="Quick ranges">
                    <a class="btn btn-outline-secondary"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       asp-route-from="@p7From" asp-route-to="@todayStr">Last 7d</a>
                    <a class="btn btn-outline-secondary"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       asp-route-from="@p30From" asp-route-to="@todayStr">Last 30d</a>
                    <a class="btn btn-outline-secondary"
                       asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       asp-route-from="@p90From" asp-route-to="@todayStr">Last 90d</a>
                </div>
            </div>
            <div class="card-body">
                <form method="get" class="row g-2 align-items-end">
                    <div class="col-12 col-md-4">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" name="from" value="@from" />
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" name="to" value="@to" />
                    </div>
                    <div class="col-12 col-md-4">
                        <button class="btn btn-primary">Apply</button>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                           class="btn btn-outline-secondary ms-2">Reset</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- KPI cards -->
        <div class="row g-3">
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small"><i class="bi bi-calendar3 me-1"></i> Total Events (in range)</div>
                        <div class="display-6">@Model.TotalEvents</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small"><i class="bi bi-people me-1"></i> Total Sign-ups (Joins)</div>
                        <div class="display-6">@Model.TotalJoins</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small"><i class="bi bi-clipboard2-check me-1"></i> Avg. Fill Rate</div>
                        <div class="display-6">@String.Format("{0:P1}", Model.AvgFillRate)</div>
                        <div class="text-muted small mt-1">Avg of min(joins, capacity)/capacity</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small"><i class="bi bi-alarm me-1"></i> Upcoming Week Load</div>
                        <div class="display-6">@Model.UpcomingWeekLoad</div>
                        <div class="text-muted small mt-1">Event(s) in the next 7 days</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="text-muted small"><i class="bi bi-person-check me-1"></i> Unique Attendees</div>
                        <div class="display-6">@Model.UniqueAttendees</div>
                        <div class="text-muted small mt-1">Distinct users in range</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar: Quick actions -->
    <div class="col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">Quick actions</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Refresh</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="News" asp-action="Index">Manage News</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Admin" asp-controller="Clubs" asp-action="Index">Manage Clubs</a>
                <a class="list-group-item list-group-item-action"
                   asp-area="Organizer" asp-controller="Events" asp-action="Index" asp-route-all="true">Manage Events</a>
            </div>
        </div>
    </div>
</div>