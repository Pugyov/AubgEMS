@model AubgEMS.Core.Models.Common.PageResult<AubgEMS.Core.Models.News.NewsListItemDto>
@{
    ViewData["Title"] = "Manage News";
}
<h1>Manage News</h1>

@if (TempData["StatusMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

<p>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="News" asp-action="Create">Create News</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Created</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var n in Model.Items)
    {
        <tr>
            <td>@n.Title</td>
            <td>@n.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary"
                   asp-area="Admin" asp-controller="News" asp-action="Edit" asp-route-id="@n.Id">Edit</a>
                <form asp-area="Admin" asp-controller="News" asp-action="Delete" asp-route-id="@n.Id"
                      method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger"
                            onclick="return confirm('Delete this news item?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.TotalCount > Model.PageSize)
{
    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
    <nav>
        <ul class="pagination">
            @for (int p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == Model.Page ? "active" : "")">
                    <a class="page-link" asp-area="Admin" asp-controller="News" asp-action="Index" asp-route-page="@p">@p</a>
                </li>
            }
        </ul>
    </nav>
}