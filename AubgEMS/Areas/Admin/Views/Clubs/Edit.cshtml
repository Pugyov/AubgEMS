@model ClubEditDto
@{
    ViewData["Title"] = "Edit Club";
    var departments = ViewBag.Departments as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var id = ViewBag.ClubId ?? ViewContext.RouteData.Values["id"];
}

<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Clubs" asp-action="Index">Clubs</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h1 class="page-title mb-3">Edit Club</h1>

<form asp-area="Admin" asp-controller="Clubs" asp-action="Edit" asp-route-id="@(id)" method="post" class="row g-3" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <div class="col-md-6">
        <label asp-for="Name" class="form-label required"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="field-validation-error"></span>
        <div class="form-text">Public club name.</div>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="field-validation-error"></span>
        <div class="form-text">Optional short description shown on the club page.</div>
    </div>

    <div class="col-md-6">
        <label asp-for="DepartmentId" class="form-label required"></label>
        <select asp-for="DepartmentId" class="form-select" asp-items="departments"></select>
        <span asp-validation-for="DepartmentId" class="field-validation-error"></span>
        <div class="form-text">Department this club belongs to.</div>
    </div>

    <div class="col-md-6">
        <label asp-for="OrganizerId" class="form-label"></label>
        <input asp-for="OrganizerId" class="form-control" placeholder="AspNetUsers.Id of organizer" />
        <span asp-validation-for="OrganizerId" class="field-validation-error"></span>
        <div class="form-text">
            Temporary: paste the User Id of the organizer.
            @* Later we can replace this with a dropdown of users with the Organizer role. *@
        </div>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save changes</button>
        <a asp-area="Admin" asp-controller="Clubs" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }