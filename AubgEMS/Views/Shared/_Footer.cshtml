@using AubgEMS.Core.Constants
@{
    var year = DateTime.UtcNow.Year;
    var isSignedIn  = User?.Identity?.IsAuthenticated ?? false;
    var isAdmin     = User?.IsInRole(RoleNames.Admin) ?? false;
    var isOrganizer = User?.IsInRole(RoleNames.Organizer) ?? false;
}
<footer class="mt-auto border-top bg-light">
    <div class="container py-4">
        <div class="row g-4">
            <!-- Brand + blurb -->
            <div class="col-12 col-md-4">
                <h5 class="mb-2">Aubg<span class="text-primary">EMS</span></h5>
                <p class="text-muted mb-3">
                    Discover, join, and manage university club events in one place.
                </p>
                <div class="d-flex gap-3">
                    <a class="text-muted" href="#" aria-label="Twitter"><i class="bi bi-twitter-x fs-5"></i></a>
                    <a class="text-muted" href="#" aria-label="Instagram"><i class="bi bi-instagram fs-5"></i></a>
                    <a class="text-muted" href="#" aria-label="Facebook"><i class="bi bi-facebook fs-5"></i></a>
                    <a class="text-muted" href="mailto:contact@example.edu" aria-label="Email"><i class="bi bi-envelope fs-5"></i></a>
                </div>
            </div>

            <!-- Quick links -->
            <div class="col-6 col-md-4">
                <h6 class="text-uppercase text-muted small mb-2">Explore</h6>
                <ul class="list-unstyled mb-0">
                    <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="Events" asp-action="Index">Events</a></li>
                    <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="Clubs" asp-action="Index">Clubs</a></li>
                    <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="News" asp-action="Index">News</a></li>
                    @if (isSignedIn)
                    {
                        <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="My" asp-action="Events">My Events</a></li>
                    }
                    @if (isOrganizer || isAdmin)
                    {
                        <li><a class="link-body-emphasis text-decoration-none" asp-area="Organizer" asp-controller="Events" asp-action="Index">Organizer</a></li>
                    }
                    @if (isAdmin)
                    {
                        <li><a class="link-body-emphasis text-decoration-none" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                    }
                </ul>
            </div>

            <!-- Legal / contact -->
            <div class="col-6 col-md-4">
                <h6 class="text-uppercase text-muted small mb-2">Help & Legal</h6>
                <ul class="list-unstyled mb-3">
                    <li><a class="link-body-emphasis text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    <li><a class="link-body-emphasis text-decoration-none" href="#">Terms</a></li>
                    <li><a class="link-body-emphasis text-decoration-none" href="#">Support</a></li>
                </ul>
                <div class="small text-muted">
                    Contact: <a class="text-decoration-none" href="mailto:ndp221@aubg.edu">ndp221@aubg.edu</a>
                </div>
            </div>
        </div>
    </div>

    <div class="border-top">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center py-3 gap-2">
            <div class="small text-muted">© @year AubgEMS. All rights reserved.</div>
            <a href="#" class="small text-decoration-none">Back to top ↑</a>
        </div>
    </div>
</footer>