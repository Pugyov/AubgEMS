@model AubgEMS.Core.Models.Common.PageResult<AubgEMS.Core.Models.Events.EventListItemDto>

@{
    ViewData["Title"] = "My Events";
}

<!-- Header -->
<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">My Events</li>
    </ol>
</nav>

<div class="mb-3">
    <h1 class="page-title">My Events</h1>
    <p class="page-subtitle">Events you’ve created or joined, upcoming first.</p>
</div>

<!-- status / toast-style alert via TempData -->
<partial name="_StatusMessage" />

@if (!Model.Items.Any())
{
    @await Html.PartialAsync("_EmptyState", new AubgEMS.Models.EmptyStateViewModel {
        Icon = "bi-calendar-plus",
        Title = "No events yet",
        Message = "Join or create an event to see it here.",
        ActionText = "Browse events",
        ActionController = "Events",
        ActionAction = "Index"
    })
}
else
{
    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th style="width: 22%">When</th>
            <th>Title</th>
            <th style="width: 18%">Club</th>
            <th style="width: 18%">Type</th>
            <th style="width: 18%">Location</th>
            <th style="width: 12%"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.StartTime.ToLocalTime().ToString("ddd, dd MMM yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id">
                        @item.Title
                    </a>
                </td>
                <td>@(string.IsNullOrWhiteSpace(item.ClubName) ? "-" : item.ClubName)</td>
                <td>@(string.IsNullOrWhiteSpace(item.EventTypeName) ? "-" : item.EventTypeName)</td>
                <td>@(string.IsNullOrWhiteSpace(item.LocationName) ? "TBA" : item.LocationName)</td>
                <td class="text-end">
                    @* Show status/action *@
                    @if (item.CreatedByMe)
                    {
                        <span class="badge bg-secondary">Created by you</span>
                    }
                    else if (item.JoinedByMe)
                    {
                        <form asp-controller="Events" asp-action="Leave" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="returnUrl"
                                   value="@Url.Action("Events", "My", new { page = Model.Page, pageSize = Model.PageSize })" />
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Leave this event?');">
                                Leave
                            </button>
                        </form>
                    }

                    <a class="btn btn-sm btn-outline-primary ms-2"
                       asp-controller="Events" asp-action="Details" asp-route-id="@item.Id">
                        View
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <div class="text-muted">
            Page @Model.Page • @Model.TotalCount total
        </div>

        @await Html.PartialAsync("_Pager", new AubgEMS.Models.PagerViewModel {
            Page = Model.Page,
            PageSize = Model.PageSize,
            TotalCount = Model.TotalCount,
            Controller = "My",
            Action = "Events"
        })
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}