@using AubgEMS.Core.Models.News
@model NewsDetailsDto

@{
    ViewData["Title"] = Model.Title;

    string Ago(DateTime utc)
    {
        var ts = DateTime.UtcNow - utc;
        if (ts.TotalDays >= 1)   { var d = (int)ts.TotalDays;  return d == 1 ? "1 day ago" : $"{d} days ago"; }
        if (ts.TotalHours >= 1)  { var h = (int)ts.TotalHours; return h == 1 ? "1 hour ago" : $"{h} hours ago"; }
        if (ts.TotalMinutes >= 1){ var m = (int)ts.TotalMinutes; return m == 1 ? "1 min ago" : $"{m} mins ago"; }
        return "Just now";
    }

    // Plain-text -> paragraphs
    string BuildBodyHtml(string? raw)
    {
        if (string.IsNullOrWhiteSpace(raw)) return "";
        var lines = raw.Replace("\r","").Split("\n\n", StringSplitOptions.RemoveEmptyEntries);
        var sb = new System.Text.StringBuilder();
        foreach (var block in lines)
        {
            var t = block.Trim();
            if (t.Length == 0) continue;
            sb.Append("<p>").Append(System.Net.WebUtility.HtmlEncode(t).Replace("\n", "<br/>")).Append("</p>");
        }
        return sb.ToString();
    }

    var bodyHtml  = BuildBodyHtml(Model.Body);

    // Prepare "more news" safely without LINQ extensions
    var moreEnum  = ViewBag.MoreNews as IEnumerable<NewsListItemDto>;
    var moreList  = moreEnum == null ? new List<NewsListItemDto>() : new List<NewsListItemDto>(moreEnum);

    // Group into slides of 3 items each (to keep Razor transitions simple)
    var slides = new List<List<NewsListItemDto>>();
    for (int i = 0; i < moreList.Count; i += 3)
    {
        var count = Math.Min(3, moreList.Count - i);
        slides.Add(moreList.GetRange(i, count));
    }
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="News" asp-action="Index">News</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
    </ol>
</nav>

<!-- Title -->
<header class="mb-3">
    <h1 class="display-6 fw-bold lh-sm">@Model.Title</h1>

    <div class="d-flex flex-wrap align-items-center gap-3 text-muted small">
        <span>@Ago(Model.CreatedAtUtc)</span>
        <span>• @Model.CreatedAtUtc.ToLocalTime().ToString("dd MMM yyyy · HH:mm")</span>

        <span class="ms-auto d-none d-md-inline">
            <a class="text-decoration-none me-3" href="#" role="button">
                <i class="bi bi-share"></i> Share
            </a>
            <a class="text-decoration-none" href="#" role="button">
                <i class="bi bi-bookmark"></i> Save
            </a>
        </span>
    </div>
</header>

<!-- Hero image -->
@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <figure class="mb-4">
        <img class="img-fluid rounded shadow-sm w-100"
             src="@Model.ImageUrl"
             alt="@Model.Title" />
    </figure>
}

<!-- Article body -->
<article class="news-body">
    @Html.Raw(bodyHtml)
</article>

<!-- More news carousel -->
@if (slides.Count > 0)
{
    <hr class="my-5" />

    <div class="d-flex align-items-baseline justify-content-between mb-2">
        <h2 class="h5 m-0">More news</h2>
        <div class="small text-muted">You might also like</div>
    </div>

    <div id="moreNews" class="carousel slide" data-bs-ride="false">
        <div class="carousel-inner">
            @for (int si = 0; si < slides.Count; si++)
            {
                var active = (si == 0) ? "active" : "";
                var s = slides[si];

                <div class="carousel-item @active">
                    <div class="row g-3">
                        @foreach (var n in s)
                        {
                            <div class="col-12 col-md-4">
                                <a class="card h-100 shadow-sm news-card text-decoration-none"
                                   asp-controller="News" asp-action="Details" asp-route-id="@n.Id">
                                    <!-- Simple, parser-safe image (no custom CSS props) -->
                                    @if (!string.IsNullOrWhiteSpace(n.ImageUrl))
                                    {
                                        <img class="card-img-top" src="@n.ImageUrl" alt="@n.Title" />
                                    }
                                    <div class="card-body">
                                        <div class="news-meta mb-1">@n.CreatedAtUtc.ToLocalTime().ToString("dd MMM yyyy")</div>
                                        <h3 class="h6 mb-0 line-clamp-2">@n.Title</h3>
                                        <span class="stretched-link"></span>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        @if (slides.Count > 1)
        {
            <button class="carousel-control-prev" type="button" data-bs-target="#moreNews" data-bs-slide="prev" aria-label="Previous">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#moreNews" data-bs-slide="next" aria-label="Next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </button>
        }
    </div>
}