@using AubgEMS.Core.Models.News
    @model NewsDetailsDto

    @{
    ViewData["Title"] = Model.Title;
}

<h1 class="mb-3">@Model.Title</h1>
    <p class="text-muted">@Model.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm") UTC</p>

    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="news image" class="img-fluid mb-3" style="max-height:300px;object-fit:cover;" />
}

<div>
    @Html.Raw(Model.Body) <!-- If you don't trust Body as HTML, render plain text instead -->
    </div>

    <p class="mt-3">
    <a asp-action="Index">‚Üê Back to News</a>
    </p>