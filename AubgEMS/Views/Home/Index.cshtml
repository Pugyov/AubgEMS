@model IEnumerable<AubgEMS.Core.Models.News.NewsListItemDto>

@{
    ViewData["Title"] = "Home";
}

<div class="p-4 p-md-5 mb-4 bg-light rounded-3 border">
    <div class="container-fluid py-3">
        <h1 class="display-6">Welcome to AubgEMS</h1>
        <p class="lead text-muted mb-3">
            Discover upcoming events and the latest news from AUBG clubs.
        </p>
        <a asp-controller="Events" asp-action="Index" class="btn btn-primary me-2">Browse Events</a>
        <a asp-controller="News" asp-action="Index" class="btn btn-outline-primary">All News</a>
    </div>
</div>

<h2 class="h5 mb-3">Latest News</h2>
@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">No news yet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var n in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(n.ImageUrl))
                    {
                        <img class="card-img-top" src="@n.ImageUrl" alt="@n.Title" />
                    }
                    <div class="card-body">
                        <h3 class="h6 card-title mb-1">@n.Title</h3>
                        <div class="text-muted small mb-2">
                            @n.CreatedAtUtc.ToLocalTime().ToString("dd MMM yyyy")
                        </div>
                        <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id" class="stretched-link">Read</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<hr class="my-4" />
<partial name="_Faq" />